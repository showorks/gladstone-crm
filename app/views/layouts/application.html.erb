<!DOCTYPE html>
<html>
<head>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <title><%= @page_title ? "#{@page_title} - Gladstone CRM" : "Gladstone CRM" %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
  <header class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-inner">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Gladstone CRM</a>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Home", "/" %></li>
          <li><%= link_to "Item One", "#" %></li>
          <li><%= link_to "Item Two", "#" %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        </ul>
      </div>
    </div>
  </header>
  <div class="container master-container">
    <ul class="breadcrumb">
      <%= yield :breadcrumb %>
    </ul>

    <br>

    <% if notice %>
      <div class="alert alert-success fade in" data-alert="alert">
        <a class="close" data-dismiss='alert' href="#">×</a>
        <p><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger fade in" data-alert="alert">
        <a class="close" data-dismiss='alert' href="#">×</a>
        <p><%= alert %></p>
      </div>
    <% end %>

    <%= yield %>
  </div>

  <footer class="footer">
    <div class="container">
      <hr>
      <p>Copyright <%= Date.today.year %> <a href="http://www.fairsoftware.com">Gladstone Inc.</a></p>
    </div>
  </footer>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
